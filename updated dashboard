        function CowInfo() {
            let cowName = document.getElementById('cname').value;
            let age = document.getElementById('age').value;
            let lgb = document.getElementById('lgb').value;

            if (!cowName || !age || !lgb) {
                alert('Please fill out all fields!');
                return;
            }

            // Push to Firebase
            firebase.database().ref('CowInfo').push({
                age: parseInt(age),
                cowName: cowName,
                lgb: parseInt(lgb)
            });

            // Redirect based on breed selection
            if (document.getElementById('breed1').checked) window.location.href = "./Breed_1_Page.html";
            if (document.getElementById('breed2').checked) window.location.href = "./Breed_2_Page.html";
            if (document.getElementById('breed3').checked) window.location.href = "./Breed_3_Page.html";
